   "source": [
    "while 1:\n",
    "    n = int(input())\n",
    "    if n == 0:\n",
    "        break\n",
    "    a, b, c = map(int, input().split())\n",
    "    if b-a == c-b:\n",
    "        d = b-a\n",
    "        print((n*(2*a + (n-1)*d)) // 2)\n",
    "    elif b/a == c/b:\n",
    "        r = b//a\n",
    "        print(a*(r**n - 1)//(r-1))"
   ]
  },
